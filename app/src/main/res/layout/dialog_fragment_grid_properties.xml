<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sdremthix.com.gridview.view.GridPropertiesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_show_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="@={viewModel.showGridEnabled}"
            android:text="Show Grid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_columns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.squareCellsEnabled?false:true}"
                android:inputType="number"
                android:text="@{String.valueOf(viewModel.columns)}"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Columns" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_rows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.squareCellsEnabled?false:true}"
                android:inputType="number"
                android:text="@{String.valueOf(viewModel.rows)}"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rows" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_square_cells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="@={viewModel.squareCellsEnabled}"
            android:text="Square cells" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_snap_to_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="@={viewModel.snapToGridEnabled}"
            android:text="Snap to grid" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_render_to_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Render to image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Close" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply" />
        </LinearLayout>


    </LinearLayout>
</layout>